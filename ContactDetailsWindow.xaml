<Window x:Class="DesktopContactsAppCore.ContactDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DesktopContactsAppCore"
        mc:Ignorable="d"
        Title="ContactDetailsWindow" Height="500" Width="450">
    <Grid>
        <StackPanel Margin="10">
            <TextBox x:Name="nameTextBlock"
                    Margin="0,0,0,5"/>
            <TextBox x:Name="emailTextBlock"
                    Margin="0,0,0,5"/>
            <TextBox x:Name="phoneTextBlock"
                    Margin="0,0,0,5"/>
            <Button x:Name="updateButton"
                    Content="UPDATE"
                    Foreground="Green"
                    Click="updateButton_Click"/>
            <Button x:Name="deleteButton"
                    Content="DELETE"
                    Foreground="Red"
                    Click="deleteButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
